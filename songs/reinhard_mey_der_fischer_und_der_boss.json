        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Der Boss laesst halten und steigt aus und mit ihm ein ganzer Tross"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Jeder kann sehn, da kommt nicht irgendwer, da kommt der Boss!"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Der will einen Dorsch an den Haken, heut, nicht irgendwann,"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Und er zahlt den dreifachen Preis dafuer, darauf kommt es nicht an."
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Der Fischer lacht Vielleicht nicht aufs Geld, aber aufs Wetter schon!"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Der Boss kennt keinen Widerspruch, nun gut Fuenffachen Lohn!"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Ich fahr bei Wind und Wetter, doch was sich da zusammenbraut,"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Dafuer, mein Herr, sind wir beide zu klein und mein Boot ist dafuer nicht gebaut"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Der grosse Boss und ein kleiner Fischer, der sich bockig stellt"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Ich kauf deinen ganzen Jahresfang und ich zahl dir das zehnfache Geld"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Zehnfaches Geld Der Fischer sieht, wie der Rostfrass nagt am Boot,"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Oel leckt aus der Maschine, ein neuer Anstrich tut not."
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Zuhaus muss neues Reet ins Dach, das wartet zu lange schon,"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Und kaum zwei Wochen dann hat die Juengste Konfirmation."
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Dann laedt er nach der Kirche in den Dorfkrug, welch ein Fest,"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Wenn er die feinsten Speisen und Weine auftragen laesst"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Dabei der groesste Steinbutt, den er je gefangen hat."
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Doch vorher faehrt er noch mit der juengsten Tochter in die grosse Stadt"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Und kauft das schoenste Kleid fuer sie, sie soll die schoenste sein!"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Zehnfaches Geld Der kleine Fischer reicht dem grossen Boss die Hand"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Schlag ein"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Leinen los, vorn und achtern klar und volle Kraft voraus"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Und kaum in Luv der Mole geht ueber das Steuerhaus"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Die erste schwere See, noch schuettelt sich das Boot, da hetzt"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Die naechste schon heran vom Sturm der Wellenkamm zerfetzt,"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Die wirft den staehlernen Rumpf hoch empor, der Motor klagt"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Und heult auf unter Qualen, wenn die Schraube ins Leere ragt,"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Stuerzt ihn hinab ins Wellental, und schlaegt ihn krachend auf"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Und hebt ihn aus den Abgruenden zum naechsten Sturz hinauf."
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Jetzt tobt die Hoelle richtig los Das Boot rollt, stampft und kraengt"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Und es ist laengst nicht mehr das Steuer, das seinen Weg durch die Fluten lenkt."
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Jetzt brechen alle Wetter zugleich ueber das Boot herein,"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Ein letzter Schlag zerschmettert ihm das staehlerne Gebein."
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Aechzend bersten die Planken, dann verschlingt der schwarze Schlund"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Das Ruderhaus und Mann und Maus reisst es mit auf den Grund."
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Zwei Seenotkreuzer finden Tags drauf einen Rettungsring"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Und eine Oelspur im Revier, wo das Boot unterging."
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Im Grossformat trauert in allen Zeitungen sein Tross,"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Ein Requiem, und grosse Reden fuer den grossen Boss."
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Und Sonntag ist Palmarum und im Fischerhaus am Meer"
            }
          ]
        },
        {
          "chunks": [
            {
              "chord": null,
              "lyrics": "Sind die dunklen Fenster wie erloschene Augen, muedegeweint und leer."
            }
          ]
        }
